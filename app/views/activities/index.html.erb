<h1>All Activities</h1>

<ul>
  <% @activities.each do |activity| %>
    <li>
      <% if @location %>
        <%= link_to activity.name, location_activity_path(@location, activity) %>
      <% else %>
        <%= link_to activity.name, activity_path(activity) %>
      <% end %>
    </li>
  <% end %>
</ul>