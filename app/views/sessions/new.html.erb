<h1>User Sign In Form</h1>

<%= render 'shared/flash' %>

<%= form_for(@user, url: sessions_create_path(@user), method: :post) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.submit 'Sign In' %>
<% end %>